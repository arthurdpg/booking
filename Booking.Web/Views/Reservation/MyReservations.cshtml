@using Booking.Web.Extensions
@model MyReservationsViewModel
@{
    ViewData["Title"] = "My Reservations";
}

<div class="text-center">
    <h1 class="display-4">Reservations</h1>

    @if (Model.Reservations.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Hotel</th>
                    <th scope="col">Room</th>
                    <th scope="col">From</th>
                    <th scope="col">To</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Reservations.Count; i++)
                {
                    <tr>
                        <th scope="row">@(i+1)</th>
                        <td>@Model.Reservations[i].Room.Hotel.Name</td>
                        <td>@Model.Reservations[i].Room.Type.GetDescription()</td>
                        <td>@Model.Reservations[i].From.ToShortDateString()</td>
                        <td>@Model.Reservations[i].To.ToShortDateString()</td>
                        <td>
                            <button class="btn btn-primary" formaction="Edit">Edit</button>&nbsp;
                            <button class="btn btn-danger" formaction="Delete">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1 class="display-5">No reservations found!</h1>
    }
</div>
